<p id="notice"><%= notice %></p>

<h1>
  <strong>Album:</strong>
  <%= @album.name %>
</h1>

<p>
  <strong>Description:</strong>
  <%= @album.description %>
</p>


<%= link_to 'Edit this album', edit_album_path(@album) %> |
<%= link_to 'My Albums', albums_path %>

<h1>My Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Caption</th>
      <th>Picurl</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @album.pictures.each do |picture| %>
    <tr>
      <td><%= picture.title %></td>
      <td><%= picture.caption %></td>
      <td><%= image_tag picture.picurl, options={size: "200"} %></td>
      <td><%= link_to 'Show', album_picture_path(@album, picture)%></td>
      <td><%= link_to 'Edit', edit_album_picture_path(@album, picture) %></td>
      <td><%= link_to 'Destroy', [@album, picture], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<h2>Add A Picture To This Album</h2>
<%= link_to "Add New Picture", new_album_picture_path(@album) %>
