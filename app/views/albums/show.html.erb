<p id="notice"><%= notice %></p>

<p>
  <strong>Album:</strong>
  <%= @album.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @album.description %>
</p>

<!-- <p>
  <strong>Frntpg:</strong>
  <%= @album.frntpg %>
</p> -->

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %> |

<h2>Pictures</h2>

<% @album.pictures.each do |picture| %>
    <div class="">
      <p><%= picture.title %></p>
      <p><%= picture.caption %></p>
      <p><%= picture.picurl %></p>
    </div>

    <%= link_to 'Show', [@album, @picture] %>|
    <%= link_to 'Edit', edit_album_picture_path(@album, picture) %>|
    <%= link_to 'Destroy', [@album, picture], method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>

<h2>Add A Picture To This Album</h2>
<%= link_to "Add New Picture", new_album_picture_path(@album) %>
